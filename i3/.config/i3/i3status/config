# i3status configuration file.
# see "man i3status" for documentation.

general {
    output_format = "i3bar"
    colors = true
    interval = 3
}

# List of items to display in the bar.
order += "volume master"
order += "disk /"
order += "battery 0"
order += "cpu_usage"
order += "memory"
order += "ethernet eth0"
order += "wireless wlp1s0"
order += "time"

# Display disk usage for the root (/) partition.
disk "/" {
    format = "Disk: %free"
}

# Display battery status.
battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        last_full_capacity = true
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        integer_battery_capacity = true
        low_threshold = 10
}

# Display CPU usage.
cpu_usage {
    format = "CPU: %usage"
}

# Display memory usage.
memory {
        format = "Memory: %used/%total"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}
volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

# Display ethernet status.
# ethernet eth0 {
#     format_up = "Ethernet: %ip (%speed)"
#     format_down = "Ethernet: disconnected"
# }

# Display wireless status.
wireless wlp1s0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "WiFi: disconnected"
}

# Display current time.
time {
    format = "%Y-%m-%d %H:%M:%S"
}

