# i3status configuration file.
# see "man i3status" for documentation.

general {
    output_format = "i3bar"
    colors = true
    interval = 3
}

# List of items to display in the bar.
order += "volume master"
order += "disk /"
order += "battery 0"
order += "cpu_usage"
order += "memory"
order += "ethernet enxac1a3daeed44"
order += "wireless wlp1s0"
order += "time"

# Display disk usage for the root (/) partition.
disk "/" {
    format = "ğŸ“‚ %free"
    # format = "Memory: %free"
}

# Display battery status.
battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "? UNK"
        last_full_capacity = true
        # status_full = "â˜» FULL"
        status_full = "â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ 100%"
        path = "/sys/class/power_supply/BAT%d/uevent"
        integer_battery_capacity = true
        low_threshold = 10
}

# Display CPU usage.
cpu_usage {
    format = "ğŸ¤– %usage"
    max_threshold = 75
    format_above_threshold = "ğŸ¤–ğŸ”¥ %usage"
    # format = "CPU: %usage"
}

# Display memory usage.
memory {
        format = "ğŸ“Ÿ %used/%total"
        threshold_degraded = "10%"
        format_degraded = "ğŸ“ŸğŸ”¥ Free: %free"
}
volume master {
        format = "ğŸ¶ %volume"
        format_muted = "ğŸ¤ muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

# Display ethernet status.
ethernet enxac1a3daeed44 {
    format_up = "E: %ip (%speed)"
    format_down = "E: ğŸ”´"
}

# Display wireless status.
wireless wlp1s0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "W: ğŸ”´"
}

# Display current time.
time {
    format = "%Y-%m-%d %H:%M:%S"
}

